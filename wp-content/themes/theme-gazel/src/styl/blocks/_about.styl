/*-----------------------------------------------------------------------------
 *  SECTION: about
 * ------------------------------------------------------------------------- */
.s-about

    &__body
        padding 145px 0 100px
        position relative
        @media md
            padding 50px 0 30px
        @media sm
            padding 30px 0

    &__decor
        position absolute
        top 0
        left 0
        @media md
            height 40px
        @media sm
            display none

    &__item
        margin-bottom 75px
        @media md
            margin-bottom 30px

        &:last-child
            margin-bottom 0

    &__content
        padding 0 40px 0 0
        @media lg
            padding: 0 40px 0 20px
        @media md
            padding: 0 40px 0 0
        @media sm
            padding 0

.b-advantage-grid
    margin-top 40px

    &__title
        font-size rem-calc(30px)
        font-weight bold
        text-transform uppercase
        margin-bottom 35px
        @media md
            font-size 1.2em

    &__row
        display flex
        flex-wrap wrap
        @media sm
            justify-content center

    &__item
        margin-right 90px
        font-weight 700
        text-align center
        @media lg
            margin-right 50px
        @media md
            margin-right 30px
        @media xs
            margin-right 0
            width: (100%/2)
            margin-bottom 15px

    &__icon
        height 35px
        margin-bottom 15px
        fill color-base

.b-fact-green
    max-width: 320px
    background-color #25a06a
    background-repeat no-repeat
    background-position top left
    background-size 100% 100%
    background-image url(base-img-path+'fact-green.jpg')
    padding 50px 40px
    color #fff
    font-family font-heuristica
    line-height 1.14
    margin-top -45px
    box-shadow 5px 4px 16px rgba(0, 0, 0, 0.55)
    @media sm
        display none

    &__num
        display block
        font-size rem-calc(100px)
        position relative
        top 7px
        @media lg
            font-size rem-calc(80px)

    &__text
        display inline-block


.b-fact-blue
    max-width 363px
    background-repeat no-repeat
    background-position top left
    background-size 100% 100%
    background-image url(base-img-path+'fact-blue.jpg')
    font-size 14px
    padding 95px 85px 95px 55px
    color #302f2f
    @media sm
        display none

    &__title
        line-height rem-calc(18px)
        margin-bottom 48px

    &__num
        display inline-block
        color #524c8b
        font-size rem-calc(120px)
        font-weight 700
        font-family font-heuristica
        letter-spacing -5px
        margin-left -12px
        @media lg
            font-size rem-calc(100px)

    &__num-sub
        display inline-block
        color #524c8b
        font-size rem-calc(21px)
        font-family font-heuristica
        margin-left 15px

    &__num-desc
        display inline-block
        margin-top 13px

    &__text
        line-height rem-calc(24px)
        padding-left 30px

.text-header-img
    position relative
    margin-bottom 45px
    @media xs
        margin-bottom 15px

    &__pic
        display inline-block
        overflow hidden
        width 48%

        img
            width 100%
            height auto
            display block

    &__title
        color #2d2c2c
        // color darken(#fff, 50%)
        font-family font-heuristica
        font-size rem-calc(36px)
        line-height 1.2
        position absolute
        top 50%
        left 25%
        right 0
        transform translateY(-50%)
        padding 30px 15px 30px 30px
        background-color rgba(#fff, 0.8)
        @media xs
            left 5%
            font-size 1.2rem


