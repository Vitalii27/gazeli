.s-advantage
    padding 100px 0
    @media md
        padding 30px 0

.advantages
    &__title
        text-align center
        font-size rem-calc(30px)
        font-weight bold
        text-transform uppercase
        margin-bottom 70px
        @media md
            font-size 1.6em
            margin-bottom 30px

    &__row
        margin 0 -50px
        @media md
            margin 0 -15px

    &__item
        text-align center
        padding 0 50px
        @media md
            padding 0 15px
        @media sm
            margin-bottom 30px

    &__img
        display inline-block
        width 166px
        height 144px
        margin-bottom 20px

    &__name
        text-transform uppercase
        font-size rem-calc(24px)
        font-weight bold
        color color-two
        line-height 1.2
        padding-bottom 10px
        margin-bottom 15px
        position relative
        @media md
            font-size 1.2em
        &:after
            content ''
            display block
            width 30px
            height 1px
            background-color color-main
            position absolute
            bottom 0
            left 50%
            margin-left -15px