/*-----------------------------------------------------------------------------
 *  SECTION: hero
 * ------------------------------------------------------------------------- */
.s-hero
    background-repeat: no-repeat
    background-position: top center
    background-size: cover
    position: relative
    z-index: 10

    &:before
        content: ''
        display: block
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background-color: color-base
        opacity: 0.5
        z-index: -1

    &__triangle-one
    &__triangle-two
        width 100%
        position absolute
        bottom 0
        left 0
        z-index -1

    &__triangle-one
        height: 318px
        background-image: linear-gradient(to bottom right, transparent 0%, transparent 50%, color-base 50.1%, color-base 100%);

    &__triangle-two
        height: 190px
        background-image: linear-gradient(to bottom right, transparent 0%, transparent 50%, #eaeaea 50.1%, #eaeaea 100%);

    &__body
        padding: 145px 0 30px
        @media md
            padding: 30px 0

.b-hero-title
    margin: 0 0 30px
    text-transform: uppercase
    color: #fff
    text-shadow: 0 2px 6px #000
    @media md
        text-align: center
    @media sm
        margin-bottom 15px

    &__top
    &__bottom
        display: block

    &__top
        font-size: rem-calc(36px)
        font-weight: 700
        margin-bottom: 31px
        @media sm
            margin-bottom 10px
            font-size 1.2rem

    &__bottom
        font-size: rem-calc(42px)
        font-weight: 300
        @media sm
            font-size 1.3rem

        strong
            font-weight: 700
            color: #fff

.b-hero-advantage
    background-color: rgba(#080a1a, 0.61)
    color: #fff
    font-size: rem-calc(24px)
    font-weight: 500
    padding: 45px 40px
    @media sm
        padding: 15px 15px 25px
        font-size 1rem

    &__item
        margin-bottom: 45px
        text-shadow: 0 2px 6px #000
        padding-left: 60px
        text-transform uppercase
        position: relative
        &:last-child
            margin-bottom: 0
        @media sm
            margin-bottom 30px

        .icon
            position: absolute
            left: 0
            top: 50%
            transform: translateY(-50%)

        em
            text-transform none
            font-style: normal
            color: #ac92e5

.b-hero-action
    display: inline-block
    width: 93%
    border-style: solid
    border-color #876cc4 #876cc4 #876cc4 transparent
    border-width: 14px
    padding: 18px
    margin-top -5px
    position relative
    z-index 0
    @media md
        display none

    &:before
    &:after
        content: ''
        display: block
        width: 14px
        background-color #876cc4
        position absolute
        left -14px
        @media sm
            display: none

    &:before
        top: -14px
        height: 50px
    &:after
        bottom: -14px
        height: 80%

    &__inner
        background-color: #25a06a
        color: #fff
        padding: 46px
        text-align: center
        font-size: rem-calc(24px)
        line-height rem-calc(30px)
        font-weight: 500
        @media md
            padding: 15px

    &__title
        line-height: rem-calc(36px)
        letter-spacing: -0.44px
        text-transform: uppercase
        padding-bottom 15px
        margin-bottom 18px
        position relative

        &:after
            content: ''
            display: block
            width: 135px
            height: 2px
            background-image: linear-gradient(to right, transparent 0%, #fff 25%, #fff 75%, transparent 100%);
            position absolute
            bottom 0
            left 50%
            transform translateX(-50%)

        .accent
            font-size rem-calc(33px)
            letter-spacing: -0.6px

    &__text
        margin-bottom 17px
        font-weight 400

        .accent
            text-transform uppercase
            font-weight bold
            color color-error

    &__form
        .b-form__group
            margin-bottom 8px
            &:last-child
                padding-top 16px
            @media md
                padding: 0 5px
        .b-form__control
            width: 100%
        .button
            width: 100%
            color: #1d7e53
            padding: 21px 10px 18px
            box-shadow 0 0 18px 0 rgba(#d2ff00, 0.36)
            &:hover
                color: inherit