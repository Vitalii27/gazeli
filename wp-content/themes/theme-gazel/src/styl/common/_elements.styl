*
    box-sizing border-box
    margin 0
    padding 0

body, html
    padding: 0
    border: 0
    vertical-align: baseline
    min-height: 100%
    width: 100%
    overflow-x: hidden

html
    font-size: base-font-size
    @media sm
        font-size: 14px

body
    font-family: base-font-family
    font-weight: 400
    min-height 100%
    color: color-main
    background-color: #fff
    line-height: 1
    scroll-behavior: smooth

// browsehappy
.browsehappy
    display: block
    margin: 0
    padding: 30px
    text-align: center
    background: color-error
    color: #fff
    font-size: rem-calc(18px)
    line-height: rem-calc(22px)

    a,
    a:hover
        color: #fff
        text-decoration: underline

// Footer to bottom
//- Обертка
.wrapper
    min-height: 100vh
    width: 100%
    position: relative
    display: flex
    flex-direction: column

//- Блок контента на всю высоту
.main
    flex: 1 0 auto

//- Подвал
.footer
    flex: 0 0 auto

a
    color: inherit
    text-decoration: none
    transition: all 0.25s linear

    &:hover
        color: color-base
        text-decoration: none
        border-bottom-color: color-base

a
button
input
    &:focus
        outline: none

//- Списки
ul, li
    margin 0
    padding 0
    list-style-type none

//- Элементы форм
input, textarea, button, select
    outline none
    border 0
    color inherit
    font-family inherit
    background transparent
    transition: all 0.25s linear

button, button[type="submit"],
input[type="submit"]
    cursor: pointer

input, textarea
    line-height: 1
    border: 0
    background-color: transparent
    font-family: inherit
    &::placeholder
        color color-placeholder

input[type="search"]
    -webkit-appearance: none

textarea
    width 100%
    resize: none

fieldset
    border: none
    margin: 0
    padding: 0

.hide-input
.hide
    display: none
.hidden-input
    position absolute
    top 0
    left 0
    opacity 0
    visibility hidden

.button
    display: inline-block
    text-transform: uppercase
    font-weight: 500
    text-align: center
    line-height: 1.2
    padding: 15px 25px 12px
    transition: all 0.2s linear

    &--round
        @extend .button
        border-radius: 50px

    &--base
        background-color: color-base
        color: #fff
        &:hover
            color: #fff
            background-color: lighten(color-base, 15%)

    &--white
        background-color #fff
        color: color-main
        &:hover
            background-color color-base
            color: #fff

.cur
    font-size 0.85em

// menu-icon
.menu-icon
    width: 45px
    padding 10px 10px 5px
    position fixed
    top: 0
    right: 0
    z-index: 10
    display: none
    background-color #fff
    transition all 0.2s linear

    @media md
        display: block

    span
        display: block
        height: 4px
        background-color: color-base
        border-radius: 2px
        margin-bottom: 4px
        transition: all 0.25s linear

    &.active
        transform: rotate(90deg)
        background-color transparent
        span
            background-color #fff


.b-logotype
    img
        max-width: 100%
        height auto

.b-worktime
    display: inline-block

    &--inline
        .icon
            width: 13px
            height: 13px
            fill: #f4f4f4
            margin-right: 5px
            vertical-align baseline
        strong
            text-transform uppercase
            color: #fff

    &--block
        position: relative
        font-size: rem-calc(18px)
        padding-left: 45px
        line-height: rem-calc(30px)
        @media lg
            font-size: rem-calc(15px)

        .icon
            position: absolute
            left: 0
            top: 50%
            margin-top: -14px

.b-phones
    display: inline-block
    text-align right

    &__item
        position relative

    &--block
        position: relative
        line-height: rem-calc(30px)
        font-weight: 700
        font-size: rem-calc(18px)
        @media lg
            font-size: rem-calc(15px)
        @media xs
            padding-left 0
        a
            display inline-block
            color color-base
            &:hover
                color: lighten(#ac92e5, 25%)

    &--inline
        .icon
            width: 13px
            height: 13px
            fill: #fff
            margin-right: 5px
        strong
            display block
            text-align left
            text-transform uppercase
            color: #fff

// Titles
.b-title
    font-size rem-calc(36px)
    font-weight 700
    text-transform uppercase
    color #393939
    margin-bottom 30px
    @media md
        margin-bottom 15px
        font-size 1.3rem
        line-height 1.2

    &-sub
        font-size rem-calc(14px)
        line-height rem-calc(24px)
    &--big
        font-size rem-calc(48px)
        @media md
            font-size 2rem

.b-subtitle
    font-size rem-calc(20px)
    line-height 1.2
    margin-bottom 2rem

.page-title
    font-size rem-calc(36px)
    font-weight 700
    text-transform uppercase
    margin 0
    padding 0
    @media md
        font-size 1.5rem


// Sections
.section
    padding 75px 0 85px
    @media md
        padding 30px 0

    &-colored
        background-color #eaeaea

    &-padding-thin
        padding 30px 0

    &-padding-bottom
        padding 0 0 50px
        @media sm
            padding-bottom 30px

    &--padding-top
        padding 160px 0 85px
        @media md
            padding 2rem 0


// Breadcrumbs
.b-crumbs
    margin-bottom 30px
    font-size rem-calc(14px)
    color color-two
    font-weight 700
    line-height 1.4

    a
        color #fff
        font-weight 400
        &:hover
            color rgba(#fff, 0.8)

    .separator
        color #fff
        font-weight 700
        display inline-block
        margin 0 15px


// Decor
.line-circle
    display block
    width 13px
    height 114px
    background-repeat no-repeat
    background-position bottom center
    background-size 100% auto
    background-image url(base-img-path+'icons/line-circle.png')

.lines-circle
    display block
    width 97px
    height 106px
    background-repeat no-repeat
    background-position bottom center
    background-size contain
    background-image url(base-img-path+'icons/lines-circle.png')

// Text content
.text-content
    line-height rem-calc(24px)
    clfix()

    h1, h2, h3, h4, h5
        font-family font-heuristica
        font-weight 700
        line-height rem-calc(30px)
        margin 0

    h1
        font-size rem-calc(30px)
        margin-bottom 25px
        @media md
            font-size 1.5em

    h2
        font-size rem-calc(28px)
        margin-bottom 20px
        @media md
            font-size 1.4em

    h3
        font-size rem-calc(26px)
        margin-bottom 15px
        @media md
            font-size 1.3em

    h4
        font-size rem-calc(24px)
        margin-bottom 10px
        @media md
            font-size 1.2em

    p+p
        margin-top 23px

    p+h1,
    p+h2,
    p+h3,
    p+h4
        margin-top 30px

    ul
        margin 15px 0
        padding-left 30px

        li
            list-style-type disc

    img
        @media sm
            display none

    .alignright
        float right
        margin-left 40px
        margin-top -15px

    .alignleft
        float left
        margin-right 25px
        margin-top -15px

.text-columns
    columns 2
    column-fill balance
    column-gap 40px
    @media md
        columns 1


// Hexagon
.hexagon
    overflow: hidden
    visibility: hidden
    transform: rotate(120deg)
    position relative

    &__one
        overflow: hidden
        width: 100%
        height: 100%
        transform: rotate(-60deg)
        background-color inherit
        background-image inherit
        background-size inherit
    &__two
        width: 100%
        height: 100%
        visibility: visible
        transform: rotate(-60deg)
        background-color inherit
        background-image inherit
        background-repeat: no-repeat
        background-size inherit
        background-position: 50%

// Slider
.tns-outer
    position relative

// Slider nav (dots)
.tns-nav
    text-align center

    button
        display inline-block
        background-color transparent
        width 13px
        height 13px
        border-radius 50%
        border 1px solid #765bb2
        margin 0 15px
        @media md
            margin 0 5px

        &.tns-nav-active
            transform scale(2.2)
            background-color #765bb2
            @media md
                transform scale(1.6)

// Slider controls (prev,next)
.tns-controls
    position absolute
    top 9%
    left 0
    right 0
    display flex
    justify-content space-between


    button
        width 16px
        height 25px
        background-repeat no-repeat
        background-position center
        background-image url(base-img-path+'icons/slider-control.png')
        opacity 0.6
        position relative
        z-index 1
        &:hover
            opacity 1

        &[data-controls="prev"]
            transform: rotateY(180deg)

// Tabs
[data-tab]
    max-height 0
    visibility hidden
    opacity 0
    transition all 0.2s linear
    &.active
        max-height none
        visibility visible
        opacity 1

// Map
.b-map
    width 100%
    height 400px
    @media sm
        height 320px


// Table
.table
    overflow-x auto

    table
        width 100%
        line-height 1.2
        border-collapse collapse

        thead
            text-align center
            font-size 0.8rem
            background-color color-base
            color #fff

            td
                padding 5px 2px
                border 1px solid #fff

                &.short
                    width 100px

                &.accent
                    background-color color-two

        tbody
            background-color #fff

            td
                padding 10px 2px
                text-align center
                border 1px solid lighten(color-base, 80%)

                &:first-child
                    text-align left
                    padding 10px 15px


            tr:nth-child(2n)
                background-color lighten(color-base, 80%)

                td
                    border 1px solid #fff

    &--nav
        tbody
            tr:hover
                td
                    background-color color-base
                    color #fff


    &-note
        padding 15px
        line-height 1.4
        margin-bottom 2rem

.table-filter
    display flex
    align-items center
    padding 15px 0;

    &__input
        height 32px
        border 1px solid lighten(color-main,50%)
        padding 0 10px

//
// ─── SVG MAP ────────────────────────────────────────────────────────────────────
//

.svg-map
    &-elem
        width 100%
        height 560px
        @media xs
            height 300px

        &__name
            font-size 19px
            fill color-base

            &:hover
                fill darken(color-base,30%)

        a
            &:hover
                cursor pointer