/*-----------------------------------------------------------------------------
 *  FORM ELEMENT
 * ------------------------------------------------------------------------- */
.input-bordered
    display: inline-block
    border-radius: 50px
    border: 2px solid #e5e5e5
    padding: 0 30px
    height: 57px
    font-size rem-calc(16px)
    color: #fff

    &::placeholder
        color: #fff
        font-family inherit
        transition: all 0.2s linear

    &:focus
        &::placeholder
            opacity: 0.5

.b-form
    display block
    position relative
    transition all 0.2s linear

    .error-message
        display none

    &__group
        margin-bottom 10px

    &__control
        width 100%

        &.error
            border-color color-error !important

        &.textarea
            padding: 15px

    &__success
        opacity 0
        visibility hidden
        text-align center
        position absolute
        top 50%
        width 100%
        transform translateY(-50%)
        transition all 0.2s linear

    &.success
        position relative

        .b-form__success
            opacity 1
            visibility visible

        .b-form__body
            opacity 0
            visibility hidden

.checkbox
    position relative
    display block
    text-align left
    font-size 1rem
    line-height normal
    font-weight normal

    &__label
        display block
        position relative
        padding-left 30px

        &:before
            content ''
            display block
            position absolute
            top 50%
            left 0
            transform translateY(-50%)
            width 15px
            height 15px
            border 1px solid #fff
            border-radius 3px

        .icon
            position absolute
            top 50%
            left 0
            transform translateY(-50%)
            opacity 0
            transition 0.1s linear

    &__input:checked ~ &__label .icon
        opacity 1

    &__input.error ~ &__label
        color color-error

        &:before
            border-color color-error


//
// ─── SECTION FORM CONTACT ───────────────────────────────────────────────────────
//

.section-form
    background-color color-base
    background-repeat no-repeat
    background-position center
    background-size cover

    &__title
        text-align center
        color #fff
        margin-bottom 30px

.form-contact
    background-color #fff
    border-radius: 8px
    padding: 30px

    .error-message
        display none

    & > .row
        margin 0 -15px

        & > .col
            padding: 0 15px

    &__group
        margin-bottom 30px
        @media md
            margin-bottom 15px

    &__input
        width 100%
        border 1px solid #e5e5e5
        height 46px
        border-radius: 50px
        padding: 0 15px

        &.error
            border-color color-error !important

        &.textarea
            border-radius: 8px
            padding: 15px
            height 120px