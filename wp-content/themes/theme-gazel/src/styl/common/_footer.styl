/*-----------------------------------------------------------------------------
 *  FOOTER
 * ------------------------------------------------------------------------- */
.footer
    background-repeat no-repeat
    background-position top center
    background-size cover
    position relative
    z-index 1
    color #aaaaaa
    padding: 40px 0 0
    font-size rem-calc(14px)
    line-height rem-calc(24px)
    @media md
        padding-top 15px

    &:before
        content ''
        display block
        width 100%
        height 100%
        position absolute
        top 0
        left 0
        background-color #0a0916
        opacity: 0.9
        z-index -1

    &__top
        padding-bottom 55px
        @media md
            padding-bottom 30px

    &__middle
        padding-bottom 65px
        @media md
            padding-bottom 0

        .row
            margin: 0 -20px
        .col
            padding: 0 20px

    &__bottom
        background-color #0b0a16
        padding: 16px 0
        font-size rem-calc(14px)
        color: #fff

.f-logotype
    img
        max-width 153px

.f-block
    @media md
        margin-bottom 30px

    &__title
        display inline-block
        text-transform uppercase
        font-size rem-calc(18px)
        font-weight 500
        color #524c8b
        padding-bottom 10px
        margin-bottom 20px
        position relative

        &:after
            content ''
            display block
            width 98px
            height 1px
            background-color #aaaaaa
            position absolute
            bottom 0
            left 0

    &__body
        & + .f-block__body
            margin-top 10px
            padding-top 20px
            position relative
            &:after
                content ''
                display block
                width 98px
                height 1px
                background-color #aaaaaa
                position absolute
                top 0
                left 0

.f-about
    &__img
        background-repeat no-repeat
        background-position center
        background-size cover
        height 84px

    &__body
        background-color #0b0b0b
        padding 18px 20px 15px

    &__body-footer
        text-align right
        padding-top 25px

    &__link
        display inline-block
        background-color #565656
        border-radius 50px
        padding 0 12px
        font-size rem-calc(12px)
        &:hover
            color: inherit
            background-color darken(#565656, 10%)

.f-form
    .b-form__group
        margin-bottom 8px
        line-height 0

    .b-form__control
        background-color #2c2c2c
        height 38px
        width 100%
        padding: 3px 15px
        border 1px solid #2c2c2c

        &--textarea
            padding: 15px
            height: 88px

    .b-form__button
        display inline-block
        font-size rem-calc(12px)
        text-transform uppercase
        padding: 13px 18px 12px
        background-color #2c2c2c
        transition all 0.25s linear
        &:hover
            background-color darken(#2c2c2c, 15%)

    .checkbox
        font-size 0.8em
