.s-error
    background-color #362069
    color #fff
    position relative
    z-index 1
    padding 25px 0 60px
    @media md
        padding 25px 0

    &:before
        content ''
        display block
        width 100%
        height 100%
        position absolute
        top 0
        left 0
        background-color #362069
        opacity 0.8
        z-index -1

    &__title
        font-family font-heuristica
        font-size 8rem
        line-height 0.5
        @media md
            line-height 0
